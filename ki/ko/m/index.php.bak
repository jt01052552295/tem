<script>
$(function(){
	function ScaleSlider() {
		var body_w = $(document.body).width();
		$("#container").css("width",body_w + "px");
		$(".main_vg_img").css("width",body_w + "px");	
		$("#slides").css("width",body_w + "px");
		
		var body_h = (body_w * 470) / 640;
		
		$("#container").css("height",body_h + "px");
		$(".main_vg_img").css("height",body_h + "px");	
		$("#slides").css("height",body_h + "px");
		
		$(".pagination").css("top",body_h-10 - 25 + "px");
    }
    ScaleSlider();
    $(window).bind("load", ScaleSlider);
    $(window).bind("resize", ScaleSlider);
    $(window).bind("orientationchange", ScaleSlider);
    
    
	var slide =  $('#slides').slides({
		preload: true,
		preloadImage: 'img/loading.gif',
		play: 5000,
		pause: 2500,
		hoverPause: true
	});
});

var btn_loc;
$(".business_btn").click(function(){
	
	$(".content").slideUp();
	if(btn_loc != this){
		$(this).next().slideDown();
		btn_loc = this;
	}else{
		btn_loc = "";
	}
});

</script>